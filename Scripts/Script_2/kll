if [ $# -ne "1" ];then
echo "Usages: kll [Pattern to kill]";
exit;
fi

pattern=$1;
snmp_pids=`ps -ef | grep -iw $pattern | awk '{print $2}'`
echo Checking and killing Pattern $pattern if already running
if [ "$snmp_pids" != "" ]; then
for signal in "-15" "-1" "-9"
do
  pids=`ps -ef | grep -iw $pattern | awk '{print $2}'`
  kill $signal $pids 2> /dev/null
  echo Trying to Kill pid $pids with signal $signal
done
fi
echo Done
